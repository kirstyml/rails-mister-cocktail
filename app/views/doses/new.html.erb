<div class="container">
  <h1>New ingredient</h1>

  <%= simple_form_for [@cocktail, @dose] do |f| %>

  <% if @cocktail.errors.any? %>
    <div class="errors-container">
      <ul>
        <% @cocktail.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

    <%= f.input :description %>
    <%= f.association :ingredient %>
    <%= f.submit "Add ingredient" %>

  <% end %>

</div>
