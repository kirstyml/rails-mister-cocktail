<div class="container">

  <h1>Our Cocktails</h1>

  <% @cocktails.each do |cocktail| %>
    <ul>
      <li>
        <%= link_to cocktail.name, cocktail_path(cocktail) %>
      </li>
    </ul>
  <% end %>

  <%= link_to new_cocktail_path do %>
    <div class="btn btn-primary">
    Add a new Cocktail
    </div>
  <% end %>

</div>

